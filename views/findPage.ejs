<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Résultats de la Recherche</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Résultats de la Recherche</h1>
    <% if (clients && clients.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(function(cli) { %>
            <tr>
                <td><%= cli.id %></td>
                <td><%= cli.nom %></td>
                <td><%= cli.prenom %></td>
                <td><%= cli.email %></td>
                <td><%= cli.adresse %></td>
                <td><%= cli.telephone %></td>
                <td>
                    <a href="/dashboard/update/<%= cli.id %>">Modifier</a> |
                    <a href="/dashboard/delete/<%= cli.id %>">Supprimer</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
    <p>Aucun résultat trouvé. Essayez une autre recherche.</p>
    <% } %>
    <a href="/dashboard/searchForm">Retour au formulaire de recherche</a>
</body>
</html>
